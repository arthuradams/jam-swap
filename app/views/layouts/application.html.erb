<!DOCTYPE html>
<html data-ng-app="jamswap">
  <head>
    <title>JamSwap</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0-beta.2/angular-resource.min.js"></script>
    <%= javascript_include_tag "application" %>

  </head>
  <body>
    <div class="container">
      <ul class="nav nav-tabs">
        <% if @current_user %>
        <h1><%= link_to "JamSwap", @current_user %></h1>
        <% else %>
        <h1><%= link_to "JamSwap", root_path %></h1>
        <% end %>
        <% if @current_user %>
        <li><%= link_to "Welcome, #{@current_user.email}!", user_path(@current_user) if @current_user %></li>
        <li><%= link_to "Sign Out", session_path, method: :delete if @current_user %></li>
        <li ><a data-ui-sref="categoryIndex">Categories</a></li>
        <li data-ng-controller="post_controller"><%= link_to "Posts", posts_path %></li>
        <li data-ng-controller="comment_controller"><%= link_to "Comments", comments_path %></li>
        <li data-ng-controller="user_controller"><%= link_to "Users", users_path %></li>

      </ul>
      <% else %>
      <% end %>
      <% flash.each do |type, message| %>
        <p class="<%= type %>"><%= message %></p>
      <% end %>
      <div data-ui-view></div>
      <!-- <%= yield %> -->

    </div>
  </body>
</html>
