<main data-ng-controller="post_controller as vm">
<h2>Posts</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Picture url</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <br/>
  <tbody>
    <tr>
      <tr data-ng-repeat="postvm in vm.post_data">
        <td>{{postvm.title}}</td>
        <td>{{postvm.description}}</td>
        <td>{{postvm.email}}</td>
        <td>{{postvm.phone}}</td>
        <td>{{postvm.street}}</td>
        <td>{{postvm.city}}</td>
        <td>{{postvm.state}}</td>
        <td>{{postvm.picture_url}}</td>
        <td><button data-ui-sref="postShow({id: postvm.id})">Show</button></td>
        <td><button data-ui-sref="postEdit({id: postvm.id})">Edit</button>
        <td><button data-ng-click="PostIndexViewModel.destroy(postvm)">Delete</button></td>
      </tr>
  </tbody>
</table>
<br/>

<td><button class="btn btn-success btn-sm" data-ui-sref="postNew">Add a New Post</button></td>
