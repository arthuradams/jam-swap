<main data-ng-controller="meetup_controller as vm">
<h1>Meetups</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <br/>
  <tbody>
    <tr>
      <tr data-ng-repeat="meetupvm in vm.meetup_data">
        <td><a data-ui-sref="meetupShow({id: meetupvm.id})">{{meetupvm.title}}</a></td>
        <td><button data-ng-click="MeetupIndexViewModel.destroy(meetupvm)">Delete</button></td>
      </tr>
  </tbody>
</table>
<br/>
<h3>Add A New Meetup</h3>
<form data-ng-submit="MeetupIndexViewModel.create()">
  <input placeholder="Meetup Title" data-ng-model="MeetupIndexViewModel.meetup.title" />
  <input placeholder="Meetup Description" data-ng-model="MeetupIndexViewModel.meetup.description" />
  <input placeholder="Meetup Posting URL" data-ng-model="MeetupIndexViewModel.meetup.url" />
  <button type="submit">Create</button>
</form>
</main>
